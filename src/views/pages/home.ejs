<!-- Offers Section -->
<section class="offers-section">
    <div class="container">
        <div class="section-header">
            <div class="section-title-badge" data-aos="fade-up">Limited Time</div>
            <h2 class="section-title" data-aos="fade-up" data-aos-delay="100">Special Offers</h2>
            <p class="section-subtitle" data-aos="fade-up" data-aos-delay="200">
                Take advantage of our exclusive deals and save on your next project
            </p>
        </div>
        
        <div class="row g-4">
            <% const offerIcons = ['gift', 'percentage', 'truck', 'calendar-alt']; %>
            <% const offerClasses = ['offer-bg-1', 'offer-bg-2', 'offer-bg-3', 'offer-bg-4']; %>
            <% offers.forEach(function(offer, index) { %>
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="<%= 200 * (index + 1) %>">
                    <div class="offer-card <%= offerClasses[index % offerClasses.length] %>">
                        <div class="offer-inner">
                            <div class="offer-icon">
                                <i class="fas fa-<%= offerIcons[index % offerIcons.length] %>"></i>
                            </div>
                            <div class="offer-card-content">
                                <h3 class="offer-title"><%= offer %></h3>
                                <p class="offer-description">Limited time special offer for all our valued customers</p>
                                <a href="/order" class="offer-action">
                                    Claim Now <i class="fas fa-arrow-right ms-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

