<%- include('../../layouts/admin-header', {active: 'users'}) %>

<!-- Page heading -->
<div class="d-flex justify-content-between align-items-center mb-4" data-aos="fade-up">
    <div>
        <h1 class="h2 mb-0">Manage Users</h1>
        <p class="text-muted">View and manage all user accounts</p>
    </div>
    <div>
        <a href="/" class="btn btn-outline-primary">
            <i class="fas fa-eye me-2"></i>View Site
        </a>
    </div>
</div>            <!-- Users Table -->
            <div class="card shadow-sm mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-users text-primary me-2"></i>All Users</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Type</th>
                                    <th>Registered On</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (users && users.length > 0) { %>
                                    <% users.forEach(user => { %>
                                        <tr>
                                            <td><span class="badge bg-light text-dark"><%= user.id %></span></td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="user-avatar bg-light-primary text-primary rounded-circle me-2">
                                                        <%= user.first_name.charAt(0) %><%= user.last_name.charAt(0) %>
                                                    </div>
                                                    <div><%= user.first_name %> <%= user.last_name %></div>
                                                </div>
                                            </td>
                                            <td><%= user.email %></td>                                            <td>
                                                <% if(user.user_type === 'Super User') { %>
                                                    <span class="badge bg-danger">Super User</span>
                                                <% } else if(user.user_type === 'Admin') { %>
                                                    <span class="badge bg-primary">Admin</span>
                                                <% } else { %>
                                                    <span class="badge bg-info">User</span>
                                                <% } %>
                                            </td>
                                            <td><%= new Date(user.created_at).toLocaleDateString() %></td>
                                            <td class="text-center">
                                                <a href="/admin/users/<%= user.id %>" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye me-1"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <div class="empty-state">
                                                <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                                                <p>No users found</p>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../layouts/admin-footer') %>
