        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light admin-sidebar collapse">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column admin-nav">
                        <li class="nav-item">
                            <a class="nav-link <%= locals.active === 'dashboard' ? 'active' : '' %>" href="/admin">
