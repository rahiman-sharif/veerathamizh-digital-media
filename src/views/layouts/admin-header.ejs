    <script src="/js/nav-enhancement.js"></script>
    <style>        /* Admin Panel Styles */
        :root {
            --admin-primary: var(--veerathamizh-blue);
            --admin-secondary: var(--veerathamizh-blue-dark);
            --admin-accent: var(--veerathamizh-gold);
            --admin-light: #f8f9fa;
            --admin-dark: #212529;
            --transition-speed: 0.3s;
        }
          body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fa;
        }

        /* Admin sidebar adjustments for new navbar */
        .admin-sidebar {
            min-height: calc(100vh - 80px);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
            background-color: white;
            border-radius: 0 10px 10px 0;
            transition: all var(--transition-speed) ease;
        }
        
        .sidebar-sticky {
            position: sticky;
            top: 80px;
            height: calc(100vh - 80px);
            padding: 1.5rem 1rem;
            overflow-x: hidden;
            overflow-y: auto;
        }
        
        .admin-nav .nav-link {
            color: var(--admin-dark);
            padding: 0.75rem 1.25rem;
            border-radius: 8px;
            margin: 0.5rem 0;
            transition: all var(--transition-speed) ease;
            display: flex;
            align-items: center;
            font-weight: 500;
        }
        
        .admin-nav .nav-link i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
            font-size: 1.1rem;
        }
        
        .admin-nav .nav-link:hover {
            background-color: rgba(67, 97, 238, 0.1);
            color: var(--admin-primary);
            transform: translateX(5px);
        }
        
        .admin-nav .nav-link.active {
            color: white;
            background: linear-gradient(135deg, var(--admin-primary) 0%, var(--admin-secondary) 100%);
            box-shadow: 0 4px 10px rgba(67, 97, 238, 0.3);
            transform: translateX(5px);
        }
        
        .admin-content {
            padding: 1.5rem;
        }
        
        .stats-card {
            border-radius: 12px;
            border: none;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            overflow: hidden;
            transition: all var(--transition-speed) ease;
        }
        
        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .stats-card .card-body {
            padding: 1.5rem;
        }
        
        .table {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.02);
        }
        
        .table th {
            background-color: var(--admin-light);
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
            padding: 0.75rem 1rem;
        }
        
        .pagination .page-item .page-link {
            border-radius: 5px;
            margin: 0 3px;
            color: var(--admin-primary);
        }
        
        .pagination .page-item.active .page-link {
            background-color: var(--admin-primary);
            border-color: var(--admin-primary);
        }
    </style>
</head>
<body>    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg sticky-top shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/" data-aos="fade-right" data-aos-duration="1000">
                <div class="logo-container me-2">
                    <img src="/images/logo.png" alt="Veerathamizh Digital Media Group" height="50" class="d-inline-block">
                </div>
                <div class="brand-text">
                    <span class="brand-title">Veerathamizh</span>
                    <span class="brand-subtitle d-block">Digital Media</span>
                </div>
                <div class="ms-3">
                    <span class="badge bg-primary">
                        <i class="fas fa-user-shield me-1"></i>Admin Panel
                    </span>
                </div>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/" target="_blank">
                            <i class="fas fa-external-link-alt me-1"></i>View Site
                        </a>
                    </li>
                </ul>                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle me-2"></i> 
                            <%= locals.user.first_name %>
