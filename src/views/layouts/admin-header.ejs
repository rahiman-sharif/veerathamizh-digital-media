                                <span class="badge bg-primary ms-2">
                                    <i class="fas fa-shield-alt me-1"></i>Admin
                                </span>
                            <% } %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <span class="dropdown-item-text">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <strong><%= locals.user.first_name %> <%= locals.user.last_name %></strong><br>
                                            <small class="text-muted"><%= locals.user.email %></small>
                                        </div>
                                        <% if (locals.user.user_type === 'Super User') { %>
                                            <span class="badge bg-danger">
                                                <i class="fas fa-crown me-1"></i>Super User
                                            </span>
                                        <% } else if (locals.user.user_type === 'Admin') { %>
                                            <span class="badge bg-primary">
                                                <i class="fas fa-shield-alt me-1"></i>Admin
                                            </span>
                                        <% } %>
                                    </div>
                                </span>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/user/profile"><i class="fas fa-id-card me-2"></i>My Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="/auth/logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Enhanced Alerts Container -->
    <div id="enhanced-alerts-container"></div>

